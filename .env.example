# Environment variables for Argus MVP
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=postgresql://argus:argus123@localhost:5432/argus
ARGUS_DATABASE_URL=postgresql://argus:argus123@localhost:5432/argus

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
ARGUS_REDIS_HOST=localhost
ARGUS_REDIS_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ARGUS_API_HOST=0.0.0.0
ARGUS_API_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
ARGUS_LOG_LEVEL=INFO

# Debug Mode
DEBUG=true
ARGUS_DEBUG=true

# Security
SECRET_KEY=dev-secret-key-change-in-production

# Optional: External services
# OPENAI_API_KEY=your-openai-key
# SENTENCE_TRANSFORMERS_MODEL=all-MiniLM-L6-v2